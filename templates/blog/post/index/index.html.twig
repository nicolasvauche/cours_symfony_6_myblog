{% extends 'layouts/_index.html.twig' %}

{% block title %}Post index{% endblock %}

{% block main %}
    <h1>Post index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Cover</th>
                <th>Content</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>PublishedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>{{ post.title }}</td>
                    <td>{{ post.cover }}</td>
                    <td>{{ post.content | striptags | slice(0, 50) }}</td>
                    <td>{{ post.createdAt ? post.createdAt|date('d/m/Y') : '' }}</td>
                    <td>{{ post.updatedAt ? post.updatedAt|date('d/m/Y') : '' }}</td>
                    <td>{{ post.publishedAt ? post.publishedAt|date('d/m/Y') : '' }}</td>
                    <td>
                        <a href="{{ path('app_blog_post_show', {'id': post.id}) }}">show</a>
                        <a href="{{ path('app_blog_post_edit', {'id': post.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_blog_post_new') }}">Create new</a>
{% endblock %}
