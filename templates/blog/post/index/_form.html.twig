{{ form_start(form, {'attr': {'class': 'app-form'}}) }}

<fieldset class="border p-3 mb-3 bg-body-tertiary rounded">
    <legend>Catégories de l'Article</legend>

    <div class="row">
        <div class="col">
            <label for="{{ form.categories.vars.id }}"
                   class="form-label {% if form.categories.vars.required %}required{% endif %}">
                {{ form.categories.vars.label }}
            </label>
            {{ form_widget(form.categories) }}
            {{ form_errors(form.categories) }}
        </div>
        <div class="col">
            <label for="{{ form.newCategory.parent.vars.id }}"
                   class="form-label {% if form.newCategory.parent.vars.required %}required{% endif %}">
                {{ form.newCategory.parent.vars.label }}
            </label>
            {{ form_widget(form.newCategory.parent) }}
            {{ form_errors(form.newCategory.parent) }}
        </div>
        <div class="col">
            <label for="{{ form.newCategory.name.vars.id }}"
                   class="form-label {% if form.newCategory.name.vars.required %}required{% endif %}">
                {{ form.newCategory.name.vars.label }}
            </label>
            {{ form_widget(form.newCategory.name) }}
            {{ form_errors(form.newCategory.name) }}
        </div>
    </div>
</fieldset>

<div class="row mb-3">
    <div class="col">
        <label for="{{ form.title.vars.id }}" class="form-label {% if form.title.vars.required %}required{% endif %}">
            {{ form.title.vars.label }}
        </label>
        {{ form_widget(form.title) }}
        {{ form_errors(form.title) }}
    </div>
    <div class="col">
        <label for="{{ form.publishedAt.vars.id }}"
               class="form-label {% if form.publishedAt.vars.required %}required{% endif %}">
            {{ form.publishedAt.vars.label }}
        </label>
        {{ form_widget(form.publishedAt) }}
        {{ form_errors(form.publishedAt) }}
    </div>
</div>

<div class="mb-3">
    <label for="{{ form.content.vars.id }}" class="form-label {% if form.content.vars.required %}required{% endif %}">
        {{ form.content.vars.label }}
    </label>
    {{ form_widget(form.content) }}
    {{ form_errors(form.content) }}
</div>

<div class="mb-3">
    <label for="{{ form.cover.vars.id }}" class="form-label {% if form.cover.vars.required %}required{% endif %}">
        {{ form.cover.vars.label }}
    </label>
    {{ form_widget(form.cover) }}
    {{ form_errors(form.cover) }}
</div>

<button type="submit" class="btn btn-primary">{{ button_label | default('Créer') }}</button>
{{ form_end(form) }}
