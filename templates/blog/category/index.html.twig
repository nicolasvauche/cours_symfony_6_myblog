{% extends 'layouts/_index.html.twig' %}

{% block title %}Les Catégories{% endblock %}

{% block main %}
    <h1>Les Catégories</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>
                        <a href="{{ path('app_blog_category_show', {'id': category.id}) }}">Voir</a>
                        <a href="{{ path('app_blog_category_edit', {'id': category.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucune catégorie</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_blog_category_new') }}">Nouvelle catégorie</a>
{% endblock %}
